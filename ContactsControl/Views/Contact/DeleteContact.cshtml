@model ContactModel
@{
    ViewData["Title"] = "Exclusão de Contatos";
}
<div class="text-center">
    <h3 class="display-4">Realmente deseja excluir o contato: @Model.Name ?</h3>
</div>

<div class="d-flex flex-column px-5">
    <a class="btn btn-primary mb-2" asp-controller="Contact" asp-action="ConfirmDeleteContact" asp-route-id="@Model.Id" role="button">Confirmar</a>
    <a class="btn btn-danger" asp-controller="Contact" asp-action="Index" >Cancelar</a>
</div>