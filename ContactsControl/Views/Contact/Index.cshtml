@model List<ContactModel>
@{
    ViewData["Title"] = "Lista de Contatos";
}
<div class="text-center">
    <h1 class="display-4">Lista de Contatos</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Celular</th>
                <th scope="col">
                    <div class="btn-group btn-wide" role="group">
                        <a class="btn btn-success px-lg-2" role="button" asp-controller="Contact" asp-action="CreateContact">Adicionar Contato</a>
                    </div>
                </th>

            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (ContactModel contact in Model)
                {
                    <tr>
                        <th scope="row">@contact.Id</th>
                        <td>@contact.Name</td>
                        <td>@contact.Email</td>
                        <td>@contact.Celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                                                                @* passa a informação via rota *@
                                <a role="button" class="btn btn-primary" asp-route-id="@contact.Id" asp-controller="Contact" asp-action="EditContact">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contact.Id" asp-controller="Contact" asp-action="DeleteContact"> Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>