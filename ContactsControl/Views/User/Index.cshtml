@model List<UserModel>
@{
    ViewData["Title"] = "Lista de Usuários";
}


<div class="text-center">

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-success btn-sm close-alert">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <h1 class="display-4">Lista de Usuários</h1>
    <table class="table" id="table-usuarios">
        <thead>
            <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">Nome</th>
                <th scope="col" class="text-center">Login</th>
                <th scope="col" class="text-center">E-mail</th>
                <th scope="col" class="text-center">Perfil</th>
                <th scope="col" class="text-center">Data de Cadastro</th>
                <th scope="col" class="text-center">
                    <div class="btn-group btn-wide" role="group">
                        <a class="btn btn-success px-lg-2" role="button" asp-controller="User" asp-action="CreateUser">Adicionar</a>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (UserModel user in Model)
                {
                    <tr>
                        <th scope="row" class="align-middle">@user.Id</th>
                        <td class="align-middle">@user.Nome</td>
                        <td class="align-middle">@user.Login</td>
                        <td class="align-middle">@user.Email</td>
                        <td class="align-middle">@(user.Perfil == ContactsControl.Enums.ProfileEnum.Admin ? "Administrador" : "Padrão")</td>
                        <td class="align-middle">@user.DataCadastro</td>
                        <td>
                            <div class="btn-group" role="group">
                                                                                @* passa a informação via rota *@
                                <a role="button" class="btn btn-primary" asp-route-id="@user.Id" asp-controller="User" asp-action="EditUser">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@user.Id" asp-controller="User" asp-action="DeleteUser"> Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top">Nenhum usuário encontrado</td></tr>
                @* <div class="text-center">
                    <span>Nenhum usuário encontrado</span>
                </div> *@
            }
        </tbody>
    </table>
</div>