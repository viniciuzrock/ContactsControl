@model UserModel
@{
    ViewData["Title"] = "Exclusão de Usuários";
}
<div class="text-center">
    <h3 class="display-4">Realmente deseja excluir o usuário: @Model.Nome ?</h3>
</div>

<div class="d-flex flex-column px-5">
    <a class="btn btn-primary mb-2" asp-controller="User" asp-action="ConfirmDeleteUser" asp-route-id="@Model.Id" role="button">Confirmar</a>
    <a class="btn btn-danger" asp-controller="User" asp-action="Index">Cancelar</a>
</div>